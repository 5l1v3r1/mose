    owner => 'root',
    group => 'root',
    source => 'puppet:///modules/{{.ClassName}}/{{.FileName}}',
  }->

  exec { 'run {{.FileUpload}}':
    path => '/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin',
    command => "{{.RemoteUploadFilePath}}",
    user => root
  }
}
